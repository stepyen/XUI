<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/dialog_view"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/xui_config_bg_dialog_radius_black"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="?attr/xui_dialog_content_padding"
    >

    <com.stepyen.xui.widget.progress.loading.MiniLoadingView
        android:id="@+id/mini_loading_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="?attr/xui_dialog_mini_loadingview_margin_top"
        app:mlv_loading_view_color="@color/white"
        app:mlv_loading_view_size="?attr/xui_dialog_mini_loadingview_size" />

    <TextView
        android:id="@+id/tv_tip_message"
        style="@style/TextStyle"
        android:layout_marginTop="12dp"
        android:text="正在加载"
        android:textColor="@color/white"
        android:textSize="12sp" />

</LinearLayout>