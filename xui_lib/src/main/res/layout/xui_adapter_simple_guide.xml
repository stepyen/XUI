<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY" />

    <com.stepyen.xui.widget.alpha.XUIAlphaTextView
        android:id="@+id/tv_jump"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="?attr/xui_guide_btn_margin_bottom"
        android:clickable="true"
        android:focusable="true"
        android:paddingLeft="?attr/xui_guide_btn_padding_horizontal"
        android:paddingTop="?attr/xui_guide_btn_padding_vertical"
        android:paddingRight="?attr/xui_guide_btn_padding_horizontal"
        android:paddingBottom="?attr/xui_guide_btn_padding_vertical"
        android:text="@string/xui_try_immediately"
        android:textColor="@color/white"
        android:textSize="?attr/xui_btn_view_text_size"
        android:background="@drawable/xui_config_bg_button_corner_white" />

</RelativeLayout>