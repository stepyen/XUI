<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--这里写通用的样式-->

<!--文本样式-->
    <style name="TextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
        <item name="android:gravity">center</item>
        <item name="fontPath">@string/default_app_font_path</item>
    </style>

    <style name="TextStyle.BigTitle">
        <item name="android:textSize">?attr/xui_config_size_big_title</item>
        <item name="android:textColor">?attr/xui_config_color_big_title</item>
    </style>

    <style name="TextStyle.Title">
        <item name="android:textSize">?attr/xui_config_size_title</item>
        <item name="android:textColor">?attr/xui_config_color_title</item>
    </style>

    <style name="TextStyle.Subtitle">
        <item name="android:textSize">?attr/xui_config_size_subtitle</item>
        <item name="android:textColor">?attr/xui_config_color_subtitle</item>
    </style>

    <style name="TextStyle.Content">
        <item name="android:textSize">?attr/xui_config_size_content</item>
        <item name="android:textColor">?attr/xui_config_color_content</item>
    </style>

    <style name="TextStyle.Explain">
        <item name="android:textSize">?attr/xui_config_size_explain</item>
        <item name="android:textColor">?attr/xui_config_color_explain</item>
    </style>





    <!--对话框样式-->
    <!-- BaseDialog -->
    <style name="XUIDialog" parent="@android:style/Theme.Dialog">
        <!-- Dialog的windowFrame框为无 -->
        <item name="android:windowFrame">@null</item>
        <!--是否显示title-->
        <item name="android:windowNoTitle">true</item>
        <!-- 是否漂现在activity上 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 是否半透明 -->
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:windowSoftInputMode">adjustPan</item>
        <!--显示区域背景是否透明，（#00000000）-->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!--设置dialog的背景，（#00000000）-->
        <item name="android:background">@android:color/transparent</item>
        <!--就是用来控制灰度的值，当为1时，界面除了我们的dialog内容是高亮显示的，dialog以外的区域是黑色的，完全看不到其他内容，系统的默认值是0.5-->
        <item name="android:backgroundDimAmount">0.5</item>
        <!--显示区域以外是否使用黑色半透明背景-->
        <item name="android:backgroundDimEnabled">true</item>
    </style>


    <!--自定义弹窗样式-->
    <style name="XUIDialog.Custom">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:background">@android:color/transparent</item>
        <!-- 去除黑色边框的关键设置项 -->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 屏幕背景是否变暗 -->
        <item name="android:backgroundDimAmount">0.5</item>
    </style>

    <!--自定义弹窗样式-->
    <style name="XUIDialog.Custom.MiniLoading">
        <!-- 屏幕背景是否变暗 -->
        <item name="android:backgroundDimAmount">0</item>
    </style>



</resources>