<?xml version="1.0" encoding="utf-8"?>
<resources>


    <!--TitleBar-->
    <style name="TitleBar">
        <item name="tb_barHeight">?attr/xui_actionbar_height</item>
        <item name="tb_immersive">?attr/xui_actionbar_immersive</item>
        <item name="xui_actionbar_action_horizontal_padding">?attr/xui_actionbar_action_horizontal_padding</item>
        <item name="xui_actionbar_action_vertical_padding">?attr/xui_actionbar_action_vertical_padding</item>
        <item name="tb_sideTextPadding">?attr/xui_actionbar_side_text_padding</item>
        <item name="tb_sideTextColor">?attr/xui_actionbar_text_color</item>
        <item name="tb_titleTextColor">?attr/xui_actionbar_text_color</item>
        <item name="tb_subTitleTextColor">?attr/xui_actionbar_text_color</item>
        <item name="tb_actionTextColor">?attr/xui_actionbar_text_color</item>
        <item name="tb_sideTextSize">?attr/xui_actionbar_action_text_size</item>
        <item name="tb_titleTextSize">?attr/xui_actionbar_title_text_size</item>
        <item name="tb_subTitleTextSize">?attr/xui_actionbar_sub_text_size</item>
        <item name="tb_actionTextSize">?attr/xui_actionbar_action_text_size</item>
        <item name="tb_leftImageResource">?attr/xui_actionbar_ic_navigation_back</item>
        <item name="tb_dividerColor">@color/transparent</item>
        <item name="tb_dividerHeight">1dp</item>
    </style>


    <!--字母索引列表-->
    <declare-styleable name="LetterIndexBar">
        <attr name="letterSize" format="dimension"/>
        <attr name="letterColor" format="color"/>
        <attr name="selectLetterColor" format="color"/>
        <attr name="selectBackground" format="reference|color"/>
        <attr name="isBoldface" format="boolean"/>
        <attr name="isLetterCenter" format="boolean"/>
    </declare-styleable>

    <!--自定义数字输入键盘-->
    <declare-styleable name="PasswordKeyboardView">
        <!-- 删除按键的图标 -->
        <attr name="pkv_deleteDrawable" format="reference" />

        <!-- 删除按键图标的宽度 -->
        <attr name="pkv_deleteWidth" format="dimension|reference" />

        <!-- 删除按键图标的高度 -->
        <attr name="pkv_deleteHeight" format="dimension|reference" />

        <!-- 删除按键图标的颜色 -->
        <attr name="pkv_deleteBackgroundColor" format="color|reference" />
    </declare-styleable>



    <style name="Dialog.NoTitle" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="Dialog.NoTitle.NoShadow">
        <!--使背景模糊的-->
        <item name="android:backgroundDimEnabled">false</item>
    </style>


    <style name="Animation.Bottom.Rising" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/anim_slide_in_bottom</item>
        <item name="android:windowExitAnimation">@anim/anim_slide_out_bottom</item>
    </style>

</resources>