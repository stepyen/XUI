<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--全局样式-->

    <!--全局高度-->
    <attr name="xui_config_padding" format="dimension"/>
    <attr name="xui_config_margin" format="dimension"/>
    <attr name="xui_config_size_item" format="dimension"/>
    <attr name="xui_config_size_line" format="dimension"/>
    <attr name="xui_config_size_item_space" format="dimension"/>

    <!--全局颜色-->
    <attr name="xui_config_color_background" format="color"/>
    <attr name="xui_config_color_line" format="color"/>
    <attr name="xui_config_color_item" format="color"/>
    <attr name="xui_config_color_item_space" format="color"/>

    <attr name="xui_switch_alpha_pressed" format="boolean"/>
    <attr name="xui_switch_alpha_disabled" format="boolean"/>
    <attr name="xui_alpha_pressed" format="float"/>
    <attr name="xui_alpha_disabled" format="float"/>

    <!--**************************文本样式************************************-->
    <attr name="xui_config_size_big_title" format="dimension"/>
    <attr name="xui_config_size_title" format="dimension"/>
    <attr name="xui_config_size_subtitle" format="dimension"/>
    <attr name="xui_config_size_content" format="dimension"/>
    <attr name="xui_config_size_explain" format="dimension"/>

    <attr name="xui_config_color_big_title" format="color"/>
    <attr name="xui_config_color_title" format="color"/>
    <attr name="xui_config_color_subtitle" format="color"/>
    <attr name="xui_config_color_content" format="color"/>
    <attr name="xui_config_color_explain" format="color"/>


    <!-- ==========================splash================================== -->
    <!--启动页背景-->
    <attr name="xui_config_splash_bg" format="reference"/>
    <!--启动页上的应用图标-->
    <attr name="xui_config_splash_app_logo" format="reference"/>
    <!--启动页上应用图标距离下端的距离-->
    <attr name="xui_config_app_logo_bottom" format="dimension"/>
    <!--启动页上公司的标志-->
    <attr name="xui_config_splash_company_logo" format="reference"/>
    <!--启动页上公司的标志距离下端的距离-->
    <attr name="xui_config_company_logo_bottom" format="dimension"/>


    <attr name="xui_guide_btn_padding_horizontal" format="float"/>
    <attr name="xui_guide_btn_padding_vertical" format="float"/>
    <attr name="xui_guide_btn_margin_bottom" format="float"/>


    <!-- ==========================ActionBar================================== -->
    <!--标题栏的背景颜色-->
    <attr name="xui_actionbar_color" format="color"/>
    <!--标题栏文字的颜色-->
    <attr name="xui_actionbar_text_color" format="color"/>
    <!--是否支持沉浸式标题栏-->
    <attr name="xui_actionbar_immersive" format="boolean"/>
    <!--标题栏返回箭头-->
    <attr name="xui_actionbar_ic_navigation_back" format="reference"/>

    <!--标题栏的高度-->
    <attr name="xui_actionbar_height" format="dimension"/>
    <!--标题栏标题文字的大小-->
    <attr name="xui_actionbar_title_text_size" format="dimension"/>
    <!--标题栏副标题文字的大小-->
    <attr name="xui_actionbar_sub_text_size" format="dimension"/>
    <!--标题栏动作文字的大小-->
    <attr name="xui_actionbar_action_text_size" format="dimension"/>
    <!--标题栏动作图片的padding-->
    <attr name="xui_actionbar_action_padding" format="dimension"/>
    <!--标题栏两侧文字的padding-->
    <attr name="xui_actionbar_side_text_padding" format="dimension"/>


    <!-- android 5.0以下不能再selector中用?attr,必须要整个drawable由使用者提供 -->
    <attr name="xui_round_btn_bg_color" format="color"/>
    <attr name="xui_round_btn_border_color" format="color"/>
    <attr name="xui_round_btn_text_color" format="color"/>

    <attr name="xui_btn_view_radius" format="dimension"/>
    <attr name="xui_btn_view_width" format="dimension"/>
    <attr name="xui_btn_view_height" format="dimension"/>
    <attr name="xui_btn_view_text_size" format="dimension"/>
    <attr name="xui_btn_view_border_width" format="dimension"/>

    <attr name="xui_config_icon_drawable_padding" format="dimension"/>


    <!--***********dialog********************-->
    <attr name="xui_dialog_radius_size" format="dimension"/>
    <attr name="xui_dialog_background_dim_amount" format="float"/>
    <attr name="xui_dialog_content_padding" format="dimension"/>

    <!--MiniLoadingDialog-->
    <attr name="xui_dialog_mini_loadingview_size" format="dimension"/>
    <attr name="xui_dialog_mini_loadingview_margin_top" format="dimension"/>


    <!--**********************************************
*                  xui tabSegment              *
***********************************************-->
    <attr name="xui_tab_sign_count_view" format="reference"/>
    <attr name="xui_tab_sign_count_view_minSize" format="dimension"/>
    <attr name="xui_tab_sign_count_view_minSize_with_text" format="dimension"/>
    <attr name="xui_tab_sign_count_view_bg" format="reference"/>
