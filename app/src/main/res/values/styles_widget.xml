<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--TabLayout-->
    <style name="TabText" parent="TextAppearance.Design.Tab">
        <item name="android:textColor">@color/selector_tab_text_color</item>
        <item name="android:textSize">?attr/xui_config_size_content</item>
    </style>

    <style name="TabText.Explain">
        <item name="android:textColor">@color/selector_tab_text_color</item>
        <item name="android:textSize">?attr/xui_config_size_explain</item>
    </style>

    <style name="TabLayoutStyle" parent="Base.Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/xui_config_main_theme</item>
        <item name="tabIndicatorHeight">2dp</item>
        <item name="tabPaddingStart">12dp</item>
        <item name="tabPaddingEnd">12dp</item>
        <item name="android:background">@color/white</item>
        <item name="tabBackground">?attr/selectableItemBackground</item>
        <item name="tabTextAppearance">@style/TabText</item>
        <item name="tabSelectedTextColor">@color/xui_config_main_theme</item>
        <item name="tabTextColor">@color/xui_gray_6</item>
    </style>

    <!--TextView 提示标签-->
    <style name="TextView_hint_tag" parent="TextStyle">
        <item name="android:textColor">@color/xui_config_main_theme</item>
        <item name="android:textSize">?attr/xui_config_size_content</item>
        <item name="android:layout_marginLeft">@dimen/xui_config_content_spacing_horizontal_phone</item>
        <item name="android:layout_marginTop">@dimen/xui_config_content_spacing_vertical_phone</item>
        <item name="android:layout_marginBottom">@dimen/xui_config_content_spacing_vertical_phone</item>
        <item name="android:gravity">left</item>
    </style>


    <style name="Material.SpinnerStyle" parent="@style/Widget.AppCompat.Spinner">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:textSize">15sp</item>
        <item name="ms_dropdown_height">wrap_content</item>
        <item name="ms_text_color">@color/black</item>
        <item name="ms_padding_left_size">0dp</item>
        <item name="ms_dropdown_offset">0dp</item>
    </style>


    <style name="EditInfoItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">55dp</item>
        <item name="sUseRipple">false</item>
        <item name="sEnableEdit">true</item>
    </style>

</resources>