<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:minHeight="?attr/listPreferredItemHeight"
    android:orientation="vertical"
    android:paddingStart="?attr/xui_config_padding"
    android:paddingEnd="?attr/xui_config_padding">

    <TextView
        android:id="@+id/tv_title"
        style="@style/TextStyle"
        android:textSize="@dimen/xui_config_size_title"
        android:textColor="@color/xui_config_color_title"

        tools:text="主标题" />

    <TextView
        android:id="@+id/tv_sub_title"
        style="@style/TextStyle"
        android:textSize="@dimen/xui_config_size_explain"
        android:textColor="@color/xui_config_color_explain"
        android:layout_marginTop="4dp"
        tools:text="副标题" />

</LinearLayout>