<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/ll_super_text_parent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >



            <TextView
                style="@style/TextView_hint_tag"
                android:text="展示 OptionItem 能力"
                />

            <com.stepyen.xui.widget.textview.supertextview.OptionItem
                android:layout_width="match_parent"
                android:layout_height="50dp"
                app:sDividerLineType="bottom"
                app:sLeftTextString="姓名"
                app:sRightTextString="张三"
                app:sRightTextColor="@color/xui_gray_6"
                app:sRightViewMarginRight="15dp"
                />
            <com.stepyen.xui.widget.textview.supertextview.OptionItem
                android:layout_width="match_parent"
                android:layout_height="50dp"
                app:sDividerLineType="bottom"
                app:sLeftTextString="手机号"
                app:sRightTextString="12345678910"
                app:sRightViewMarginRight="10dp"
                app:sRightIconRes="@drawable/ic_right_gray_option"
                />

            <com.stepyen.xui.widget.textview.supertextview.OptionItem
                android:id="@+id/stv_test_click"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                app:sDividerLineType="bottom"
                app:sLeftTvDrawableRight="@drawable/icon_warn"
                app:sLeftTvDrawableHeight="18dp"
                app:sLeftTvDrawableWidth="18dp"
                app:sTextViewDrawablePadding="3dp"
                app:sLeftTextString="姓名"
                app:sRightTextString="张三"
                app:sRightViewMarginRight="10dp"
                app:sRightIconRes="@drawable/ic_right_gray_option"
                />


            <com.stepyen.xui.widget.textview.supertextview.OptionItem
                android:layout_width="match_parent"
                android:layout_height="50dp"
                app:sLeftTextString="账号与安全"
                app:sRightIconRes="@drawable/ic_right_gray_option"
                app:sRightTextString="已保护"
                app:sRightTvDrawableLeft="@drawable/icon_crown" />

            <com.stepyen.xui.widget.textview.supertextview.OptionItem
                android:layout_width="match_parent"
                android:layout_height="60dp"
                app:sLeftTopTextString="朋友圈"
                app:sLeftViewGravity="left_center"
                app:sRightIconRes="@drawable/ic_right_gray_option"
                app:sRightTvDrawableRight="@drawable/ic_wechat_friend" />


            <com.stepyen.xui.widget.textview.supertextview.OptionItem
                android:layout_width="match_parent"
                android:layout_height="50dp"
                app:sDividerLineType="bottom"
                app:sLeftTextString="声音"
                app:sRightViewType="switchBtn"
                app:sSwitchIsChecked="true"
                />

            <com.stepyen.xui.widget.textview.supertextview.OptionItem
                app:sDividerLineType="bottom"
                app:sLeftTextString="声音"
                app:sRightTextString="人"
                app:sCenterViewGravity="left_center"
                app:sEditTextHint="请输入"
                style="@style/EditInfoItem"
                app:sEditTextButtonType="none"
                android:background="@color/white"
                app:sEditTextGravity="right"
                />

            <com.stepyen.xui.widget.textview.supertextview.OptionItem
                android:layout_width="match_parent"
                android:layout_height="60dp"
                app:sDividerLineType="bottom"
                app:sLeftIconRes="@drawable/icon_bank_cmb"
                app:sLeftTopTextString="银行卡支付"
                app:sLeftViewGravity="left_center"
                app:sRightViewType="checkbox"

                />

            <com.stepyen.xui.widget.textview.supertextview.OptionItem
                android:layout_width="match_parent"
                android:layout_height="60dp"
                app:sDividerLineType="bottom"
                app:sLeftIconWidth="50dp"
                app:sLeftIconHeight="50dp"
                app:sLeftTopTextString="底部线对齐左边文字"
                app:sLeftIconRes="@drawable/icon_bank_cmb"
                app:sLeftViewGravity="left_center"
                app:sRightViewType="switchBtn"
                app:sTopDividerLineMarginLeft="10dp"
                app:sIsBottomDividerAlignLeftText="true"
                />



            <com.stepyen.xui.widget.textview.supertextview.OptionItem
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:background="@color/colorAccent"
                app:sCenterBottomTextString="中下"
                app:sCenterTextString="中"
                app:sCenterTopTextString="中上"
                app:sDividerLineType="bottom"
                app:sLeftBottomTextString="左下"
                app:sLeftTextString="左中文字"
                app:sLeftTopTextString="左上"
                app:sRightBottomTextString="右下"
                app:sRightTextString="右中"
                app:sRightTopTextString="右上" />


            <com.stepyen.xui.widget.textview.supertextview.OptionItem
                android:layout_width="match_parent"
                android:layout_height="80dp"
                app:sCenterTextString="支付宝"
                app:sCenterTvDrawableHeight="20dp"
                app:sCenterTvDrawableLeft="@drawable/icon_love"
                app:sCenterTvDrawableRight="@drawable/icon_love"
                app:sCenterTvDrawableWidth="20dp"
                app:sLeftTextString="支付宝"
                app:sLeftTvDrawableHeight="10dp"
                app:sLeftTvDrawableWidth="10dp"
                app:sLeftTvDrawableLeft="@drawable/icon_love"
                app:sLeftTvDrawableRight="@drawable/icon_love"
                app:sRightTextString="支付宝"
                app:sRightTvDrawableHeight="30dp"
                app:sRightTvDrawableLeft="@drawable/icon_love"
                app:sRightTvDrawableRight="@drawable/icon_love"
                app:sRightTvDrawableWidth="30dp"
                app:sTextViewDrawablePadding="3dp" />

            <TextView
                style="@style/TextView_hint_tag"
                android:text="选择支付方式  配合 RadioGroupPlus 实现单选"
                />

            <com.stepyen.xui.widget.radiogruop.RadioGroupPlus
                android:id="@+id/radiogroupplus_super_text"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:rgp_checkedButton = "@id/RadioButton_id_alipay"
                >

                <com.stepyen.xui.widget.textview.supertextview.OptionItem
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    app:sDividerLineType="bottom"
                    app:sLeftIconWidth="40dp"
                    app:sLeftIconHeight="40dp"
                    app:sLeftTopTextString="支付宝"
                    app:sLeftBottomTextString="推荐使用"
                    app:sLeftBottomTextSize="12sp"
                    app:sLeftBottomTextColor="@color/xui_gray_4"
                    app:sLeftIconRes="@drawable/ic_alipay"
                    app:sLeftViewGravity="left_center"
                    app:sRightViewType="radioButton"
                    app:sRadioButtonId="@id/RadioButton_id_alipay"
                    />

                <com.stepyen.xui.widget.textview.supertextview.OptionItem
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    app:sDividerLineType="bottom"
                    app:sLeftIconWidth="40dp"
                    app:sLeftIconHeight="40dp"
                    app:sLeftTopTextString="微信"
                    app:sLeftIconRes="@drawable/ic_wechat_pay"
                    app:sLeftViewGravity="left_center"
                    app:sRightViewType="radioButton"
                    app:sRadioButtonId="@id/RadioButton_id_wechat"
                    />
                <com.stepyen.xui.widget.textview.supertextview.OptionItem
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    app:sDividerLineType="bottom"
                    app:sLeftIconWidth="40dp"
                    app:sLeftIconHeight="40dp"
                    app:sLeftTopTextString="银联"
                    app:sLeftIconRes="@drawable/ic_money"
                    app:sLeftViewGravity="left_center"
                    app:sRightViewType="radioButton"
                    app:sRadioButtonId="@id/RadioButton_id_bank"
                    />
            </com.stepyen.xui.widget.radiogruop.RadioGroupPlus>


            <com.stepyen.xui.widget.textview.ShapeTextView
                android:id="@+id/superbtn_comfrim"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginHorizontal="15dp"
                android:layout_marginVertical="10dp"
                android:text="确认支付"
                android:textColor="@color/white"
                android:gravity="center"
                app:sSolidColor="@color/xui_config_color_light_blue"
                app:sCornersRadius="5dp"
                />


        </LinearLayout>


    </ScrollView>
</LinearLayout>