<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
>


    <TextView
        style="@style/TextView_hint_tag"
        android:text="圆形+边框图片 RadiusImageView"
        />

    <com.stepyen.xui.widget.imageview.RadiusImageView
        android:clickable="true"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:src="@drawable/img_beautiful_scenery"
        app:riv_border_color="@color/green"
        app:riv_border_width="2dp"
        app:riv_is_circle="true"
        />

    <TextView
        style="@style/TextView_hint_tag"
        android:text="圆角+边框图片 RadiusImageView"
        />

    <com.stepyen.xui.widget.imageview.RadiusImageView
        android:clickable="true"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:src="@drawable/img_beautiful_scenery"
        app:riv_border_color="@color/green"
        app:riv_border_width="2dp"
        app:riv_corner_radius="5dp"
        />
</LinearLayout>