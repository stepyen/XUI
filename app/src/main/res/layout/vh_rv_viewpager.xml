<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
>


    <com.stepyen.xui.widget.tabbar.TabSegment
        android:id="@+id/tabSegment2"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        app:ts_normal_color="@color/black"
        app:ts_selected_color="@color/xui_config_color_light_blue"
        app:ts_has_indicator="true"
        app:ts_mode="scrollable"
        android:textSize="13sp"
        app:ts_select_textSize="18sp"
        app:ts_space="20dp"
        app:ts_indicator_width="20dp"
        android:layout_marginTop="10dp"
        app:ts_typeface_provider="com.stepyen.xuidemo.fragment.components.indicater.TestTypefaceProvider"
        />

    <android.support.v4.view.ViewPager
        android:id="@+id/contentViewPager2"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:fitsSystemWindows="true"
        />
</LinearLayout>